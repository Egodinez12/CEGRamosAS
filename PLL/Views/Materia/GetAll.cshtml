@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Control de Materias:  </h2>
            
        </div>
    </div>
</div>
 <hr />
<br />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script type="text/javascript" src="~/js/Materia.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-10">

        </div>
        <div class="col-md-1" style="padding-left:100px">
            @Html.ActionLink("Agregar", "Form", "Materia", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-12">
            <table id="Materia" class="table table-hover" border="1">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">Editar</th>
                        <th class="text-center" scope="col">IdMateria</th>
                        <th class="text-center" scope="col">Nombre Materia</th>
                        <th class="text-center" scope="col">Creditos</th>
                        <th class="text-center" scope="col">Semestre</th>
                        <th class="text-center" scope="col">Eliminar</th>
                    </tr>

                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>


<div class="modal fade" id="ModalUpdate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel"> Actualizar Materia</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtIdMateria" placeholder="IdMateria" disabled="disabled" /><i class="bi bi-pencil-square" style="color: ivory"></i>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtNombreMateria" placeholder="Nombre Materia" />
                    </div>
                    <div class="form-group" >
                        <input type="text" class="form-control" id="txtCreditos" placeholder="Creditos" />
                    </div>
                    <div class="form-group"> 
                        <input type="text" class="form-control" id="ddlSemestres" placeholder="Semestre" />
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn glyphicon glyphicon-pencil" id="btnUpdate" onclick="Update()"> Actualizar </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col-md-5">

            <div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Detalle</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <h5>
                                Acción completada con éxito
                            </h5>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" value="Regresar" data-dismiss="modal">Regresar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
