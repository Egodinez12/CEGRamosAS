@model ML.Beca
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>Control de Becas : </h2>
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h5></h5>
        </div>
    </div>
    <br /> <br />
    <div class="row">
        <div class="col-md-1 ">
            @Html.ActionLink("Agregar", "Form", "Beca", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td>Nombre Beca</td>
                        <td>MontoMensual</td>                      
                        <td>Eliminar</td>

                        

                    </tr>
                </thead>
                <tbody> 
                    @foreach (ML.Beca beca in Model.BecaList)
                    {
                        <tr>
                            <td><a class="btn  btn-warning  glyphicon glyphicon-edit" href="@Url.Action("Form", "Beca", new { IdBeca = beca.IdBeca })"></a></td>                            
                            <td>@beca.NombreBeca</td>    
                            <td>@beca.MontoMensual</td>   
                            <td><a class="btn btn-danger glyphicon glyphicon-trash " href="@Url.Action("Delete", "Beca", new { IdBeca = beca.IdBeca })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
