@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>Control de Alumnos: </h2>
        </div>
    </div>
     <hr />
    <div class="row">
        <div class="col-md-6">
            <h5></h5>
        </div>
    </div>
    <br /> <br />
    <div class="row">
        <div class="col-md-1 ">
            @Html.ActionLink("Agregar", "Form", "Alumno", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td>Alumno</td>
                        <td>Fotografia</td>                      
                        <td>Eliminar</td>

                        

                    </tr>
                </thead>
                <tbody> 
                    @foreach (ML.Alumno alumno in Model.AlumnoList)
                    {
                        <tr>
                            <td><a class="btn  btn-warning  glyphicon glyphicon-edit" href="@Url.Action("Form", "Alumno", new { IdAlumno = alumno.IdAlumno })"></a></td>                            
                            <td>@alumno.Nombre @alumno.ApellidoPat @alumno.ApellidoMat</td>
                            <td>
                            @if(alumno.Fotografia != null)
                            {
                                <img id="Img" src="data:image/*;base64,@(alumno.Fotografia)" style="width:40px ; height:40px;" />
                            }
                            else
                            {
                                <img id="Img" src="~/image/sinfoto.jpg" style="width:40px ; height:40px" />
                            }
                        </td>   
                            
                            <td><a class="btn btn-danger glyphicon glyphicon-trash " href="@Url.Action("Delete", "Alumno", new { IdAlumno = alumno.IdAlumno })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
